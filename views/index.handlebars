<!-- ./views/index.handlebars -->

<div class="container">
  <div class="row">
    <div class="dropdown">
      <button class="btn btn-outline-dark dropdown-toggle btn-lg" type="button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        類別
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">家居物業</a>
        <a class="dropdown-item" href="#">交通出行</a>
        <a class="dropdown-item" href="#">休閒娛樂</a>
        <a class="dropdown-item" href="#">餐飲食品</a>
        <a class="dropdown-item" href="#">其他</a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <label for="totalAmount">總金額：</label>
      <h1 id="totalAmount">1000</h1>
    </div>
  </div>

  <div class="row">
    <div class="col align-self-center">
      <table class="table table-striped">
        <tbody>
          {{#each records}}
          <tr>
            <th scope="row">{{{this.category}}}</th>
            <td>
              <div class="row">{{{this.name}}}</div>
              <div class="row">{{{this.date}}}</div>
            </td>
            <td class="text-right">{{{this.amount}}}</td>
            <td class="text-right">
              <a href="/records/{{{this.id}}}/edit">修改</a>
              <form action="/records/{{{this.id}}}/delete" method="POST" style="display: inline;">
                <button type="submit">刪除</button>
              </form>

            </td>
          </tr>

          {{/each}}
        </tbody>
      </table>
    </div>


  </div>
  <div class="text-center">
    <a href="/records/new">新增支出</a>
  </div>


</div>